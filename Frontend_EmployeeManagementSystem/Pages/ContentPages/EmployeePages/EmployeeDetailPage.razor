@if (ShowDetailsPage)
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <div class="card border-success shadow-lg">
                    <div class="card-header">
                        @EmployeeDetails!.Name - Chi tiết
                    </div>
                    <div class="card-body">
                        <div class="hstack gap-2">
                            <div class="vstack gap-3">
                                <img src="@EmployeeDetails.Photo"
                                class="card-img-top border-warning shadow-sm"
                                style="width:100px; height:100px; border-radius:50%;" />

                                <table class="table border-danger">
                                    <tbody>
                                        <tr>
                                            <td><h6 class="fw-bold">Tên:</h6></td>
                                            <td>@EmployeeDetails.Name</td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Công việc:</h6></td>
                                            <td>@EmployeeDetails.Jobname</td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Điện thoại:</h6></td>
                                            <td>@EmployeeDetails.TelephoneNumber</td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Địa chỉ:</h6></td>
                                            <td>@EmployeeDetails.Address</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="vstack gap-3">
                                <table class="table border-primary">
                                    <tbody>
                                        <tr>
                                            <td colspan="2" class="text-center">
                                                <h6 class="fw-bold">Thông tin của phòng ban</h6>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Tên phòng ban tổng hợp:</h6></td>
                                            <td>@EmployeeDetails.Branch!.Department!.GeneralDepartment!.Name</td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Tên phòng bộ phận:</h6></td>
                                            <td>@EmployeeDetails.Branch.Department.Name</td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Tên chi nhánh:</h6></td>
                                            <td>@EmployeeDetails.Branch.Name</td>
                                        </tr>
                                    </tbody>
                                </table>

                                <table class="table border-success">
                                    <tbody>
                                        <tr>
                                            <td colspan="2" class="text-center">
                                                <h6 class="fw-bold">Thông tin địa chỉ</h6>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Quốc gia:</h6></td>
                                            <td>@EmployeeDetails!.City!.Country!.Name</td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold">Thành phố:</h6></td>
                                            <td>@EmployeeDetails.City.Name</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <button class="btn btn-danger" @onclick="DetailsPageCloseBtnClicked">
                            Đóng
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool ShowDetailsPage { get; set; }
    [Parameter] public Employee? EmployeeDetails { get; set; }
    [Parameter] public EventCallback HandleDetailsPageCloseBtnClicked { get; set; } = new();
    
    async Task DetailsPageCloseBtnClicked() => await HandleDetailsPageCloseBtnClicked.InvokeAsync();

}
